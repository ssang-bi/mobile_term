<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="평균 소비"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/consumption_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="consumption_cost"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/consumption"
        app:layout_constraintTop_toBottomOf="@+id/consumption" />

    <TextView
        android:id="@+id/income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="평균 소득"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/consumption"
        app:layout_constraintTop_toBottomOf="@+id/consumption" />

    <TextView
        android:id="@+id/income_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="income_cost"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/income"
        app:layout_constraintTop_toBottomOf="@+id/income" />

    <TextView
        android:id="@+id/saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="총 저축액"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/income"
        app:layout_constraintTop_toBottomOf="@+id/income" />

    <TextView
        android:id="@+id/saving_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="saving_cost"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/saving"
        app:layout_constraintTop_toBottomOf="@+id/saving" />
</androidx.constraintlayout.widget.ConstraintLayout>